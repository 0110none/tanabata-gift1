  <script>
    // 更适合发给朋友的祝福语
    const WISHES = [
      "愿你每天都能开开心心 😊",
      "工作顺利，生活顺心 ✨",
      "七夕快乐！好运常伴你 🎉",
      "无论多忙，都要记得好好休息 🌙",
      "愿你前路顺遂，心中有光 🌟",
      "平安喜乐，万事顺意 🍀",
      "今天也要元气满满！💪"
    ];

    const msg = document.getElementById("msg");

    document.querySelectorAll(".star").forEach((s)=>{
      s.addEventListener("click", ()=>{
        const text = WISHES[Math.floor(Math.random()*WISHES.length)];
        msg.textContent = text;
      });
    });
  </script>
